<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="ButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/bg_btn_green</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="CrossButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/colorGray</item>
        <item name="android:background">@drawable/baseline_close_black_18</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
</resources>
