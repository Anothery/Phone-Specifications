<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimaryRipple</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="ButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>


    <style name="CrossButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/baseline_close_24</item>
    </style>

    <style name="BoldDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">6dp</item>
        <item name="android:background">@drawable/bg_divider</item>
    </style>


    <style name="ThinDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@drawable/bg_divider</item>
    </style>

    <style name="Toolbar" parent="AppTheme">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="colorControlNormal">@color/textColorSecondary</item>
    </style>
</resources>
