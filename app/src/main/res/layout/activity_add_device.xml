<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ui.addDevice.AddDeviceActivity">
    <EditText
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_height="55dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etInsertDevice" android:layout_marginTop="0dp" android:layout_alignParentTop="true"
            android:hint="Insert device name"/>
    <TextView
            android:layout_below="@+id/etInsertDevice"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvMatchesCount"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@id/tvMatchesCount"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/rv_matches"/>
</RelativeLayout>