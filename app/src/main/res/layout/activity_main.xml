<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".ui.main.MainActivity">

    <Button
            android:id="@+id/main_btn_choosedevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_choose_first_device" />


    <androidx.cardview.widget.CardView
            android:id="@+id/main_cv_first_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp"
            android:visibility="gone"
            tools:visibility="visible"
            >

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:orientation="horizontal" >

            <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@mipmap/ic_launcher_round" />

            <TextView
                    android:id="@+id/main_tv_firstdevice"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textAlignment="center" />

            <Button
                    android:id="@+id/main_btn_close_first_device"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/baseline_close_black_18"
                    app:backgroundTint="@android:color/darker_gray" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <TextView
            android:id="@+id/main_tv_versus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/label_versus" />

    <Button
            android:id="@+id/main_btn_chooseseconddevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_choose_second_device" />


    <androidx.cardview.widget.CardView
            android:id="@+id/main_cv_second_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            android:visibility="gone"
            tools:visibility="visible">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:orientation="horizontal">

            <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@mipmap/ic_launcher_round" />

            <TextView
                    android:id="@+id/main_tv_seconddevice"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textAlignment="center" />

            <!-- TODO change it -->
            <Button
                    android:id="@+id/main_btn_close_second_device"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/baseline_close_black_18"
                    android:backgroundTint="@android:color/darker_gray" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <Button
            android:id="@+id/main_btn_compare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:text="Compare devices"
            android:visibility="gone"
            tools:visibility="visible" />
</LinearLayout>
